<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elm.mapper.OrderDetailetMapper">
    <insert id="saveOrderDetailetBatch" parameterType="java.util.List">
        <choose>
            <when test="list != null and list.size() > 0">
                insert into orderDetailet(orderId,foodId,merchantId,quantity) values
                <foreach collection="list" item="od" separator=",">
                    (#{od.orderId},#{od.foodId},#{od.merchantId},#{od.quantity})
                </foreach>
            </when>
            <otherwise>
                select 0
            </otherwise>
        </choose>
    </insert>


    <resultMap type="OrderDetailet" id="orderDetailetResultMap">
        <id column="odId" property="odId"/>
        <result column="orderId" property="orderId"/>
        <result column="foodId" property="foodId"/>
        <result column="quantity" property="quantity"/>
        <result column="merchantId" property="merchantId"/>
        <association property="food" javaType="Food"
                     select="com.elm.mapper.FoodMapper.getFoodByIdAndMerchantId" column="{foodId=foodId, merchantId=merchantId}"/>
    </resultMap>

    <select id="listOrderDetailetByOrderId" parameterType="Integer"
            resultMap="orderDetailetResultMap">
        select *
        from orderDetailet
        where orderId = #{orderId}
    </select>
</mapper> 